                                    <p>This view Show user Detail</p>
                                </h1>
                                <div class="border"></div>
                        <div class="row ">
                            <div class="col-4">
                                <div class="main-div">
                                    <h1 class="main-heading">
                                    <% if @user.name %>
                                        <li>Name</li>

                                    <% end %>
                                        <li>Email</li>
                                        <li>Department</li>
                                        <li>Company</li>
                                        <li>Target</li>
                                        <li>Target Acheived</li>
                                        <li>Role</li>


