                <div class="col-6">
                <div class="chart-box">
                    <h3>Target Achieved</h3>
                       <%= line_chart @target_achieved, prefix: "$", thousands: "," %>
                </div>
            </div>
            <div class="col-6">
                <div class="chart-box">
                    <h3>Refunded</h3>
                    <% if @refunded_amount %>
