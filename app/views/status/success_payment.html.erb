<div class="page-header">
    <h2 class="header-title">Paid Payment List</h2>
    
</div>
<div class="card">
    <div class="card-body">
        <div class="row m-b-30">
            <div class="col-lg-8">
                <div class="d-md-flex">
                    <div class="m-b-10">
                        <select class="custom-select" style="min-width: 180px;">
                            <option selected>Status</option>
                            <option value="all">All</option>
                            <option value="approved">Approved</option>
                            <option value="pending">Pending</option>
                            <option value="rejected">Rejected</option>
                        </select>
                    </div>
                </div>
            </div>
            
        </div>
        <div class="table-responsive">
            <table class="table table-hover e-commerce-table">
                <thead>
                    <tr>
                      
                       
                        <th>Brands</th>
                        <th>Clients</th>
                        <th>Emails</th>

                        <th>status</th>
                    </tr>
                </thead>
                <tbody>
<% @success_payment.each do |payment| %>

                    <tr>
                       
                       
                        <td>
                            <div class="d-flex align-items-center">
                                
                                <h6 class="m-b-0"><%= payment.company.name %></h6>
                            </div>
                        </td>
                        <td><%= payment.client.name %></td>

                        <td><%= payment.client.email %></td>
                        <td>

                            <div class="d-flex align-items-center">
                                <div class="badge badge-success <%= payment.status %> badge-dot m-r-10"></div>
                                <div><%= payment.status %></div>
                            </div>

                        </td>

                      
                    </tr>
    <% end %>

                </tbody>
            </table>
        </div>
    </div>
</div>
